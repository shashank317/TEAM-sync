# Core
JWT_SECRET=change_me

# Database: choose one approach
# 1) Direct URL (recommended in production)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# 2) Compose from parts (used if DATABASE_URL not set)
# DB_USER=
# DB_PASSWORD=
# DB_HOST=
# DB_PORT=5432
# DB_NAME=

# 3) Local dev SQLite fallback
# USE_SQLITE=1
# SQLITE_PATH=sqlite:///./teamsync.db

# TLS/SSL overrides
# DB_SSLMODE=require

# Cookies
# Set secure=1 for HTTPS environments like Render
COOKIE_SECURE=0
COOKIE_SAMESITE=lax

# Optional AI
# GEMINI_API_KEY=

# Misc
SQL_ECHO=0
MIGRATE_ON_START=0
PRINT_DB_INFO=0
